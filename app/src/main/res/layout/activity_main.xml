<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context="somon.islam.anishasbanglabook.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="সূচীপত্র"
        android:textSize="40dp"
        android:textStyle="bold"

        android:layout_margin="@dimen/default_gap"
        android:layout_centerInParent="true"


        >

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/soroBorno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="স্বরবর্ণ   ( অ আ ই ঈ )"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#ff9a9e"
                android:background="@drawable/my_border"
                android:layout_marginTop="100dp"

                />

            <Button
                android:id="@+id/benjonBorno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soroBorno"
                android:layout_marginTop="40dp"
                android:text="ব্যাঞ্জনবর্ণ ( ক খ গ ঘ )"
                android:textSize="25dp"
                android:background="@drawable/my_border"
                android:textColor="#ffecd2"
                android:textStyle="bold"


                />
            <Button
                android:id="@+id/fruitsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/benjonBorno"
                android:layout_marginTop="40dp"
                android:text="১০ টি ফলের নাম"
                android:textSize="25dp"
                android:textColor="#80d0c7"
                android:textStyle="bold"
                android:background="@drawable/my_border"

                />
            <Button
                android:id="@+id/flowerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fruitsName"
                android:layout_marginTop="40dp"
                android:text="১০ টি ফুলের নাম"
                android:textSize="25dp"
                android:textColor="#764ba2"
                android:textStyle="bold"
                android:background="@drawable/my_border"

                />
            <Button
                android:id="@+id/banglaRhyme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flowerName"
                android:layout_marginTop="40dp"
                android:text="মজার কবিতা"
                android:textSize="25dp"
                android:textColor="#ffecd2"
                android:textStyle="bold"
                android:background="@drawable/my_border"

                />



        </LinearLayout>


    </ScrollView>





</RelativeLayout>